<div class="flyntComponent componentSpacing {{ options.theme }}" is="flynt-grid-posts-archive">
	<div class="container centerMaxWidthContainer">
		<div class="preContent">
			<h1>{{ title }}</h1>
			{% set html = isHome ? preContentHtml : description %}
			{{ html|e('wp_kses_post') }}
		</div>
		{% if terms %}
			{% include 'Partials/_filter.twig' %}
		{% endif %}
		<ul class="posts">
			{% for post in posts %}
				<li class="post">
					<div class="img__wrap boxShadow themeReset">
						{% if post.thumbnail.src %}
							<img class="img__wrap-image lazyload" src="{{ post.thumbnail.src | resizeDynamic(424, 283) }}" srcset="{{ placeholderImage(400, 400) }}" data-srcset="
                {{ post.thumbnail.src|resizeDynamic(1920, 1280) }} 1920w,
                {{ post.thumbnail.src|resizeDynamic(1320, 880) }} 1320w,
                {{ post.thumbnail.src|resizeDynamic(1280, 853) }} 1280w,
                {{ post.thumbnail.src|resizeDynamic(1050, 700) }} 1050w,
                {{ post.thumbnail.src|resizeDynamic(750, 500) }} 750w,
                {{ post.thumbnail.src|resizeDynamic(600, 400) }} 600w,
                {{ post.thumbnail.src|resizeDynamic(424, 283) }} 424w,
                {{ post.thumbnail.src|resizeDynamic(312, 208) }} 312w" data-sizes="auto" alt="{{ post.thumbnail.alt|e }}">
						{% endif %}
						<div class="img__description_layer">
							<div class="hoverText">
								<a href="{{ post.link }}" class="img__wrap-link" title="{{ post.title }}" target="_blank">
									<div class="img__wrap-inner boxPadding">
										<h3 class="img__wrap-title">{{ post.title }}</h3>
										<p class="img__wrap-excerpt">{{ post.preview.read_more(false).length(12) }}</p>
									</div>
								</a>
								<footer class="img__wrap-footer">
									<span class="img__wrap-readingTime">
										<i data-feather="clock"></i>
										{{ post.content | readingtime }}
										{{ labels.readingTime }}
									</span>
									<a href="{{ post.link }}" class="button button--link img__wrap-readMore" aria-hidden="true" tabindex="-1">{{ labels.readMore }}</a>
								</footer>
							</div>
						</div>
					</div>
				</li>
			{% else %}
				<p class="posts-empty">{{ labels.noPostsFound }}</p>
			{% endfor %}
		</ul>
		{% set pagination = posts.pagination %}
		{% if pagination.pages %}
			{% include 'Partials/_paginationButtons.twig' %}
		{% endif %}
	</div>
</div>
