<div class="flyntComponent componentSpacing {{ options.theme }} {{ options.card ? 'layoutCard' }}" is="flynt-grid-image-hover-text">
	<div class="container centerMaxWidthContainer">
		{% if preContentHtml %}
			<div class="preContent">
				{{ preContentHtml|e('wp_kses_post') }}
			</div>
		{% endif %}
		<ul class="grid grid--columns{{ options.columns }}">
			{% for item in items %}
				{% if item.image or item.contentHtml %}
					<li class="grid-item">
						<div class="img__wrap">
							{% if item.image %}
								<img class="img__img" src="{{ item.image.src|resizeDynamic(424, 283) }}" data-sizes="auto" alt="{{ item.image.alt|e }}">
							{% endif %}
							{% if item.contentHtml %}
								<div class="img__description_layer">
									<p class="img__description">{{ item.contentHtml|e('wp_kses_post') }}</p>
								</div>
							{% endif %}
						</div>
					</li>
				{% endif %}
			{% endfor %}
		</ul>
	</div>
</div>
